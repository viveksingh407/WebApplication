@using CricketStatsApplication.Models;

@{
    ViewBag.Title = "Tournament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="//code.angularjs.org/1.3.0-beta.17/angular.min.js"></script>
    <script src="~/Scripts/CricketWeb/CricketScheduler.js" type="text/javascript"></script>
}

@model TournamentModel

<div ng-app="CricketApp">
    <div ng-controller="CricketTeamsListCtrl as teamData">
        <table>
            <tr>
                <th>
                    <span>TeamId</span>
                </th>
                <th>
                    <span>TeamName</span>
                </th>
            </tr>
            <tr ng-repeat="team in teamData.Teams">
                <td>
                    {{ team.teamId }}
                </td>
                <td>
                    {{ team.teamName }}
                </td>
            </tr>
        </table>
    </div>
</div>