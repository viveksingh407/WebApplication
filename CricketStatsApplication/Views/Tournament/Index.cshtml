@using CricketStatsApplication.Models;

@{
    ViewBag.Title = "Tournament";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js"></script>
    <script src="~/Scripts/CricketScheduler.js" type="text/javascript"></script>
}

@model TournamentModel

<div ng-app="CricketApp">
    <div ng-controller="CricketTeamsListCtrl as teamData">
        <table>
            <tr>
                <th>
                    <span>TeamId</span>
                </th>
                <th>
                    <span>TeamName</span>
                </th>
            </tr>
            <tr ng-repeat="team in teamData.Teams">
                <td>
                    {{ team.teamId }}
                </td>
                <td>
                    {{ team.teamName }}
                </td>
            </tr>
        </table>
    </div>
</div>